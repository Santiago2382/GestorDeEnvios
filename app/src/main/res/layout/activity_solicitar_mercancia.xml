<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SolicitarMercancia"
    android:orientation="vertical"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnMercanciaDevolverse"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/devolverse" />

        <ImageView
            android:id="@+id/ivImagen"
            android:layout_width="223dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ssh" />

    </RelativeLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad Paquetes"
        android:layout_marginTop="24dp"
        app:hintTextColor="@color/yellow"
        android:background="@color/background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:helperTextEnabled="true"
        android:layout_marginBottom="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCantidadPaquetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:inputType="number"
            android:maxLength="4000"/>
    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDimension"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="@string/tvDimension"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TableRow>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Alto"
                app:hintTextColor="@color/yellow"
                android:background="@color/background"
                app:helperTextEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDimensionAlto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2sp"
                    android:enabled="true"
                    android:inputType="numberDecimal"
                    android:maxLength="4000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ancho"
                app:hintTextColor="@color/yellow"
                android:background="@color/background"
                app:helperTextEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDimensionAncho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp"
                    android:enabled="true"
                    android:inputType="numberDecimal"
                    android:maxLength="4000" />
            </com.google.android.material.textfield.TextInputLayout>

        </TableRow>

    </TableLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:layout_marginTop="24dp"
        app:hintTextColor="@color/yellow"
        android:background="@color/background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:helperTextEnabled="true"
        android:layout_marginBottom="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDireccionPaquete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:inputType="text"
            android:maxLength="4000"/>
    </com.google.android.material.textfield.TextInputLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TableRow>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ciudad"
                app:hintTextColor="@color/yellow"
                android:background="@color/background"
                app:helperTextEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCiudadPaquete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center"
                    android:enabled="true"
                    android:inputType="text"
                    android:maxLength="4000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Barrio"
                app:hintTextColor="@color/yellow"
                android:background="@color/background"
                app:helperTextEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBarrioPaquete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:enabled="true"
                    android:inputType="text"
                    android:maxLength="4000" />
            </com.google.android.material.textfield.TextInputLayout>

        </TableRow>

    </TableLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de quién recibe"
        android:layout_marginTop="24dp"
        app:hintTextColor="@color/yellow"
        android:background="@color/background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:helperTextEnabled="true"
        android:layout_marginBottom="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNombreRecibe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:inputType="text"
            android:maxLength="4000"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Celular de quién recibe"
        android:layout_marginTop="24dp"
        app:hintTextColor="@color/yellow"
        android:background="@color/background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:helperTextEnabled="true"
        android:layout_marginBottom="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCelularRecibe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:inputType="number"
            android:layout_marginBottom="40dp"
            android:maxLength="4000"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSolicitarMercancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/btnSolicitarEnvio"
        android:textSize="18sp" />

</LinearLayout>
</ScrollView>