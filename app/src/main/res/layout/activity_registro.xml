<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SolicitarMercancia"
        android:orientation="vertical"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/btnRegistroDevolverse"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/devolverse" />

            <ImageView
                android:id="@+id/ivImagen"
                android:layout_width="223dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ssh" />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/etNombreRegistro"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/yellow"
            android:background="@color/background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:helperTextEnabled="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="text"
                android:maxLength="4000"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ContraseÃ±a"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/yellow"
            android:background="@color/background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:helperTextEnabled="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassResgistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="textPassword"
                android:maxLength="4000"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero Celular"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/yellow"
            android:background="@color/background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:helperTextEnabled="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNumeroCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="number"
                android:maxLength="4000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIT o CC"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/yellow"
            android:background="@color/background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:helperTextEnabled="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="number"
                android:maxLength="4000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electronico"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/yellow"
            android:background="@color/background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:helperTextEnabled="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="textEmailAddress"
                android:maxLength="4000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSiguienteRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/btnRegis"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btnDevolverce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/btnVolverRegistro"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>