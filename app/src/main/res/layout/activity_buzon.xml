<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SolicitarMercancia"
        android:orientation="vertical"
        android:background="@color/background">

        <ImageView
            android:id="@+id/ivImagen"
            android:layout_width="223dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ssh" />

        <ImageButton
            android:id="@+id/btnBuzonDevolverse"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/ivImagen"
            android:layout_marginTop="39dp"
            android:layout_marginRight="39dp"
            android:layout_toLeftOf="@id/ivImagen"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/devolverse" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImagen"
            android:hint="Escriba su nombre completo"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/yellow"
            android:background="@color/background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:helperTextEnabled="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="text"
                android:maxLength="4000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImagen"
            android:hint="Escriba su nombre completo"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/yellow"
            android:background="@color/background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:helperTextEnabled="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIdUsuarioBuzon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="text"
                android:maxLength="4000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputLayout1"
            android:hint="Escriba su correo electronico"
            android:layout_marginTop="24dp"
            app:hintTextColor="@color/yellow"
            android:background="@color/background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:helperTextEnabled="true"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCorreoElectronico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="text"
                android:maxLength="4000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/textInputLayout2"
            android:hint="Escriba aquÃ­ su mensaje o sugerencia"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="80dp"
            android:background="@color/background"
            app:helperTextEnabled="true"
            app:hintTextColor="@color/yellow">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="text"
                android:maxLength="4000" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textInputLayout3"
            android:text="Enviar"
            android:textSize="20dp"
            android:layout_marginTop="16dp" />

    </RelativeLayout>
</ScrollView>